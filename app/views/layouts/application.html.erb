<!DOCTYPE html>
<html>
<head>
  <title>FotoShare</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="leftBanner">
<p>FotoShare</p>
</div>

<div class="middleBanner">
<% if session[:user_id] != nil %>
	<ul class="menu">
		<li><%= link_to 'Home', @logged_in_user %></li>
		<li><%= link_to 'Users', users_path %></li>
		<li><%= link_to 'Me', @logged_in_user %></li>
	</ul>
<% end %>
</div>

<div class="rightBanner">
<% if session[:user_id] != nil %>
	<p>Logged in as <%= link_to "#{@logged_in_user.first_name} #{@logged_in_user.last_name}", @logged_in_user %> | <%= link_to 'Logout', logout_path %></p>
<% else %>
	<p><%= link_to 'Register', register_path %> | <%= link_to 'Login', login_path %></p>
<% end %>
</div>

<%= yield %>

</body>
</html>

<!DOCTYPE html>
<html>
<head>
  <title>FotoShare</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar">
	<div id="leftBanner">
	<h1>FotoShare</h1>
	</div>

	<div id="centerBanner">
	<% if session[:user_id] != nil %>
		<ul>
			<li><%= link_to 'Home', @logged_in_user %></li>
			<li><%= link_to 'Users', users_path %></li>
			<li><%= link_to 'My Photos', photos_path %></li>
			<li><%= link_to 'Upload Photo', new_photo_path %></li>
			<li><%= link_to 'Friends', friends_path %></li>
		</ul>
	<% end %>
	</div>

	<div id="rightBanner">
	<% if session[:user_id] != nil %>
		<p>Logged in as <%= link_to "#{@logged_in_user.first_name} #{@logged_in_user.last_name}", @logged_in_user %> | <%= link_to 'Logout', logout_path %></p>
	<% else %>
		<p><%= link_to 'Register', register_path %> | <%= link_to 'Login', login_path %></p>
	<% end %>
	</div>
</div>

<%= yield %>

</body>
</html>

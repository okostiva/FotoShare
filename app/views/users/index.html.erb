<h1>Listing users</h1>

	<% if notice %>
		<p id="notice"><%= notice %></p>
	<% end %>

<table>
  <tr>
    <th></th>
    <th>Name</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= image_tag user.avatar.url(:thumb) %></td>
    <td><%= "#{user.first_name} #{user.last_name} (#{user.user_name})" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
